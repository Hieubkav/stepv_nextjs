{
	"name": "dohy",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"check": "oxlint",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F @dohy/backend dev",
		"dev:setup": "turbo -F @dohy/backend dev:setup",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"test:debug": "playwright test --debug",
		"test:favorites": "playwright test tests/favorites.spec.ts"
	},
	"dependencies": {
		"convex": "^1.27.3",
		"tinyglobby": "^0.2.15"
	},
	"devDependencies": {
		"@playwright/test": "^1.56.1",
		"oxlint": "^1.12.0",
		"turbo": "^2.5.6"
	},
	"packageManager": "bun@1.2.19"
}
